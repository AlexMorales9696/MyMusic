
@model IEnumerable<ArtistaViwModel>
    @{
    ViewBag.Title = "Home Page";
}
<h1 class"display-4"> Lista degli Artisti</h1>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model=>model.Nome)</th>
        <th>@Html.DisplayNameFor(model=>model.Cognome)</th>
        <th>@Html.DisplayNameFor(model=>model.NomeDArte)</th>
        <th>@Html.DisplayNameFor(model=>model.Tipo)</th>
    </tr>
   @if (Model != null && Model.Any())
    {
        foreach (var artista in Model)
        {
            <tr>
                <td>@artista.Nome</td>
                <td>@artista.Cognome</td>
                <td>@artista.NomeDArte</td>
                <td>@artista.Tipo</td>
                <td>
                    @Html.ActionLink("Modifica","Modifica",new {ID = artista.IdArtista})|
                    @Html.ActionLink("Dettagli","Dettagli",new {ID = artista.IdArtista})|
                     @Html.ActionLink("Cancella","Cancella",new {ID = artista.IdArtista})|
                    
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center"> Nessun impiegato disponibile</td>
        </tr>
    }
</table>


